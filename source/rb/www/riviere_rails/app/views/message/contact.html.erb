<head>
	<title>Riviere</title>
</head>
<body>
	<h1>Message#contact</h1>
		<iframe src="/header.html" width="100%" height="30" scrolling="no" frameborder="0">
			<p>Enable iframes to view the header.</p>
		</iframe>
<div>
	<%= form_tag({:controller => "message", :action => "create"}, :method => "get") do %>
	<%= label_tag(:em, "Email:") %>
	<%= text_field_tag(:em) %>
	<br/>
	<%= label_tag(:msg, "Message:") %>
	<%= text_area_tag(:msg) %>
	<br/>
	<%= hidden_field_tag(:uid, value=@uid) %>
	<br/>
	<%= submit_tag("Submit") %>
	<% end %>
</div>
		<iframe src="/footer.html" width="100%" height="30" scrolling="no" frameborder="0">
			<p>Enable iframes to view the footer.</p>
		</iframe>
</body>
